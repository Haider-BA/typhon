!------------------------------------------------------------------------------!
! DEFINITION DE LA ZONE 2
!------------------------------------------------------------------------------!

BLOCK:MESH
  FORMAT = CGNS
  FILE   = "geom2.cgns"
ENDBLOCK

BLOCK:MODEL
  MATERIAL = DEFINITION
  MAT_TYPE = KNL              ! LIN, KNL ou XMAT
  CONDUCT_TYPE = POLY          ! CST, POLY ou PTS
  CONDUCT  = 0.2             ! CONDUCT_TYPE = CST
  POLY_ORDER = 1              ! CONDUCT_TYPE = POLY
  COEFFILE = "coef2"          ! CONDUCT_TYPE = POLY
  HEATCAPA = 1.
ENDBLOCK

BLOCK:TIME_PARAM
  FOURIER = 0.4
ENDBLOCK

BLOCK:SPAT_PARAM
  PIPO = FLUTE
ENDBLOCK

BLOCK:INIT
  TEMP = 1000.
ENDBLOCK

BLOCK:BOCO
  FAMILY      = SORTIE
  TYPE        = ISOTHERMAL_WALL
  WALL_TEMP   = 500.
  !TYPE        = EXTRAPOLATE
  !ORDER       = QUANTITY         ! QUANTITY (ordre 1) ou GRADIENT (ordre 2)
ENDBLOCK

BLOCK:BOCO
  FAMILY       = MUR
  TYPE         = EXTRAPOLATE
  ORDER        = QUANTITY
  !TYPE        = ISOTHERMAL_WALL
  !WALL_TEMP   = 1000.
ENDBLOCK

BLOCK:BOCO
  FAMILY      = INTERFACE
  TYPE        = COUPLING
  METHOD      = GHOSTFACE  ! méthode de calcul du raccord : FLUX / GHOSTFACE / GHOSTCELL
  CONNZONE    = "zone1"
  CONNFAM     = INTERFACE
  !TYPE       = ISOTHERMAL_WALL
  !WALL_TEMP  = 500.
  !TYPE       = EXTRAPOLATE
  !ORDER      = QUANTITY      
ENDBLOCK

