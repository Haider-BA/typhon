!------------------------------------------------------------------------------!
! MENU TYPHON 
!------------------------------------------------------------------------------!

BLOCK:PROJECT           ! DEFINITION DU PROJET
  COORD     = 2D        ! type de repère  : 2D=2DPLAN / 2DAXI / 3D
  TIME      = STEADY    ! type d'intégration temporelle : STEADY / UNSTEADY / PERIODIC
  RESIDUALS = 1.E-4    ! STEADY : résidu maximal dans le champ
ENDBLOCK               

BLOCK:OUTPUT            ! SORTIE FICHIERS DES RESULTATS
  FORMAT = TECPLOT      ! format du fichier de sortie : RAW / TECPLOT / VIGIE
  FILE   = "typhon.dat" ! nom du fichier de sortie
ENDBLOCK

BLOCK:ZONE              ! DEFINITION DES ZONES ( * nb zones )
  NAME   = "VOOREN"     ! nom de la zone (facultatif)
  SOLVER = VORTEX    
ENDBLOCK

!------------------------------------------------------------------------------!
! DEFINITION DE LA ZONE (si NZONE = 1, et FILE inexistant dans BLOCK:ZONE)
!------------------------------------------------------------------------------!

BLOCK:MESH
  FORMAT = TYPHMSH
  FILE   = "vooren.mty"
ENDBLOCK

BLOCK:MODEL
  VORTEX = SINGULARITY
ENDBLOCK

BLOCK:TIME_PARAM
  DTCALC = GIVEN
  DT     = 0.1
ENDBLOCK

BLOCK:SPAT_PARAM
  KEY = PIPO
ENDBLOCK

BLOCK:INIT
  FLOW = NOFLOW
ENDBLOCK

BLOCK:BOCO
  FAMILY      = FAR-FIELD
  TYPE        = FAR-FIELD
  !VELOCITY    = ( 99.62 , 8.715, 0.)  ! incidence 5°, 100m/s
  VELOCITY    = ( 100. , 0., 0.)  ! incidence 5°, 100m/s
ENDBLOCK

BLOCK:BOCO
  FAMILY      = PROFIL
  TYPE        = WALL
  ELEMENT     = VORTEX_LIN
  KUTTA       = EQUILIBRIUM
ENDBLOCK

BLOCK:BOCO
  FAMILY      = PROFIL_KT
  TYPE        = KUTTA
  MODE        = EQUILIBRIUM
ENDBLOCK

