!------------------------------------------------------------------------------!
! MENU TYPHON V 0.0.1b
!------------------------------------------------------------------------------!

BLOCK:PROJECT           ! DEFINITION DU PROJET
 !MEMMODE = NORMAL      ! optimisation mémoire : NORMAL / SAVECPU / SAVEMEMORY !
                        !   (faculatif, defaut = NORMAL)
  NZONE   = 1           ! nombre de zones (facultatif, défaut = 1) 
  COORD   = 2D          ! type de repère  : 2D=2DPLAN / 2DAXI / 3D
  TIME    = UNSTEADY    ! type d'intégration temporelle : STEADY / UNSTEADY / PERIODIC
  DURATION  = 10000.       ! UNSTEADY : durée totale du calcul (temps physique)
 !PERIOD    = 100.      ! PERIODIC : durée de la période
 !NCYCLE    = 50        ! STEADY / PERIODIC : nombre de cycle total ou par période
 !RESIDUALS = 1.E-6     ! STEADY : résidu maximal dans le champ
  BASETIME  = 1.       ! UNSTEADY : temps de base pour le couplage ou temps de cycle
ENDBLOCK               

BLOCK:OUTPUT            ! SORTIE FICHIERS DES RESULTATS
  FORMAT = TECPLOT      ! format du fichier de sortie : RAW / TECPLOT / VIGIE
  FILE   = "typhon.dat" ! nom du fichier de sortie
ENDBLOCK

BLOCK:ZONE              ! DEFINITION DES ZONES ( * nb zones )
  NAME   = "tube"       ! nom de la zone (facultatif)
  SOLVER = HEAT         ! type de solveur : HEAT / EULER / NS
  
  ! FILE   = ""         ! nom du fichier RPM pour la définition de la zone (facultatif)
ENDBLOCK

!------------------------------------------------------------------------------!
! DEFINITION DE LA ZONE (si NZONE = 1, et FILE inexistant dans BLOCK:ZONE)
!------------------------------------------------------------------------------!

BLOCK:MESH
  FORMAT = CGNS
  FILE   = "geom1.cgns"
ENDBLOCK

BLOCK:MODEL
  MATERIAL = DEFINITION
  MAT_TYPE = KNL         ! LIN, KNL ou XMAT
  CONDUCT_TYPE = POLY     ! CST, POLY, PTS
  CONDUCT  = 0.2         ! CONDUCT_TYPE = CST
  POLY_ORDER = 0         ! CONDUCT_TYPE = POLY
  COEFFILE = "coef"      ! ordre des puissances croissantes
  HEATCAPA = 1.
ENDBLOCK

BLOCK:TIME_PARAM
  FOURIER = 0.4
ENDBLOCK

BLOCK:SPAT_PARAM
  DISSIPATIVE_FLUX = COMPACT
ENDBLOCK

BLOCK:INIT
  TEMP = 1000.
ENDBLOCK

BLOCK:BOCO
  FAMILY = MUR
  TYPE   = EXTRAPOLATE
  ORDER  = QUANTITY         ! QUANTITY (ordre 1) ou GRADIENT (ordre 2)
ENDBLOCK

BLOCK:BOCO
  FAMILY = ENTREE
  TYPE = ISOTHERMAL_WALL
  WALL_TEMP   = 1000.
 ! TYPE   = EXTRAPOLATE
 ! ORDER  = QUANTITY      
ENDBLOCK

BLOCK:BOCO
  FAMILY      = INTERFACE
  TYPE        = ISOTHERMAL_WALL
  WALL_TEMP   = 500.
ENDBLOCK

