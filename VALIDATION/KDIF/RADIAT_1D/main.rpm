!------------------------------------------------------------------------------!
! MENU TYPHON V 0.0.1b
!------------------------------------------------------------------------------!

BLOCK:PROJECT           ! DEFINITION DU PROJET
  COORD   = 2D          ! type de repère  : 2D=2DPLAN / 2DAXI / 3D
  TIME    = STEADY    ! type d'intégration temporelle : STEADY / UNSTEADY / PERIODIC
 !DURATION  = 10000.       ! UNSTEADY : durée totale du calcul (temps physique)
 !NCYCLE    = 50        ! STEADY / PERIODIC : nombre de cycle total ou par période
  RESIDUALS = 1.E-10     ! STEADY : résidu maximal dans le champ
ENDBLOCK               

BLOCK:OUTPUT            ! SORTIE FICHIERS DES RESULTATS
  FORMAT = VTK      ! format du fichier de sortie : RAW / TECPLOT / VIGIE
  FILE   = "typhon.vtk" ! nom du fichier de sortie
ENDBLOCK

BLOCK:ZONE              ! DEFINITION DES ZONES ( * nb zones )
  NAME   = "tube"       ! nom de la zone (facultatif)
  SOLVER = HEAT         ! type de solveur : HEAT / EULER / NS
ENDBLOCK

!------------------------------------------------------------------------------!
! DEFINITION DE LA ZONE (si NZONE = 1, et FILE inexistant dans BLOCK:ZONE)
!------------------------------------------------------------------------------!

BLOCK:MESH
  FORMAT = CGNS
  FILE   = "geom1.cgns"
ENDBLOCK

BLOCK:MODEL
  MATERIAL = DEFINITION
  CONDUCT  = 5.6703
  HEATCAPA = 1.
ENDBLOCK

BLOCK:TIME_PARAM
  METHOD    = IMPLICIT
  INVERSION = JACOBI
  FOURIER   = 5.
ENDBLOCK
 
BLOCK:SPAT_PARAM
  DISSIPATIVE_FLUX = COMPACT
ENDBLOCK

BLOCK:INIT
  TEMP = 500.
ENDBLOCK

BLOCK:BOCO
  FAMILY = MUR
  TYPE   = EXTRAPOLATE
  ORDER  = QUANTITY         ! QUANTITY (ordre 1) ou GRADIENT (ordre 2)
ENDBLOCK

BLOCK:BOCO
  FAMILY = ENTREE
  TYPE = ISOTHERMAL_WALL
  WALL_TEMP   = 1000.
 ! TYPE   = EXTRAPOLATE
 ! ORDER  = QUANTITY      
ENDBLOCK

BLOCK:BOCO
  FAMILY      = INTERFACE
  TYPE   = EXTRAPOLATE
  ORDER  = GRADIENT
  !TYPE        = FLUXSET_WALL
  !WALL_FLUX   = 0.
  RADIATING   = DIRECT
  RAD_TINF    = 300.
ENDBLOCK
